{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "global": {
            "properties": {
                "imagePullSecrets": {
                    "type": "array"
                },
                "imageRegistry": {
                    "oneOf": [
                        {
                            "type": "string",
                            "format": "hostname"
                        },
                        {
                            "type": "string",
                            "minLength": 0,
                            "maxLength": 0
                        }
                    ]
                },
                "storageClass": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "fullnameOverride": {
            "type": "string"
        },
        "commonLabels": {
            "type": "object",
            "description": "Labels to add to all deployed objects",
            "default": {}
        },
        "commonAnnotations": {
            "type": "object",
            "description": "Annotations to add to all deployed objects",
            "default": {}
        },
        "namespaceOverride": {
            "type": "string"
        },
        "diagnosticMode": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "image": {
            "properties": {
                "digest": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string",
                    "enum": [
                        "IfNotPresent",
                        "Always",
                        "Never"
                    ]
                },
                "pullSecrets": {
                    "type": "array"
                },
                "registry": {
                    "type": "string",
                    "format": "hostname"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "replicaCount": {
            "type": "integer"
        },
        "containerPorts": {
            "properties": {
                "http": {
                    "type": [
                        "integer",
                        "string"
                    ],
                    "minimum": 0,
                    "maximum": 65535
                },
                "metrics": {
                    "type": [
                        "integer",
                        "string"
                    ],
                    "minimum": 0,
                    "maximum": 65535
                }
            },
            "type": "object"
        },
        "livenessProbe": {
            "properties": {
                "enabled": {
                    "description": "Turn on/off livenessProbe probe",
                    "type": "boolean"
                },
                "httpGet": {
                    "properties": {
                        "path": {
                            "type": "string",
                            "format": "uri-reference"
                        },
                        "port": {
                            "type": [
                                "integer",
                                "string"
                            ],
                            "minimum": 0,
                            "maximum": 65535
                        }
                    },
                    "type": "object"
                },
                "initialDelaySeconds": {
                    "type": "integer",
                    "minimum": 0
                },
                "periodSeconds": {
                    "type": "integer",
                    "minimum": 1
                },
                "timeoutSeconds": {
                    "type": "integer",
                    "minimum": 1
                },
                "successThreshold": {
                    "type": "integer",
                    "minimum": 1
                },
                "failureThreshold": {
                    "type": "integer",
                    "minimum": 1
                }
            },
            "type": "object"
        },
        "readinessProbe": {
            "properties": {
                "enabled": {
                    "description": "Turn on/off readinessProbe",
                    "type": "boolean"
                },
                "httpGet": {
                    "properties": {
                        "path": {
                            "type": "string",
                            "format": "uri-reference"
                        },
                        "port": {
                            "type": [
                                "integer",
                                "string"
                            ],
                            "minimum": 0,
                            "maximum": 65535
                        }
                    },
                    "type": "object"
                },
                "initialDelaySeconds": {
                    "type": "integer",
                    "minimum": 0
                },
                "periodSeconds": {
                    "type": "integer",
                    "minimum": 1
                },
                "timeoutSeconds": {
                    "type": "integer",
                    "minimum": 1
                },
                "successThreshold": {
                    "type": "integer",
                    "minimum": 1
                },
                "failureThreshold": {
                    "type": "integer",
                    "minimum": 1
                }
            },
            "type": "object"
        },
        "startupProbe": {
            "properties": {
                "enabled": {
                    "description": "Turn on/off startupProbe probe",
                    "type": "boolean"
                },
                "httpGet": {
                    "properties": {
                        "path": {
                            "type": "string",
                            "format": "uri-reference"
                        },
                        "port": {
                            "type": [
                                "integer",
                                "string"
                            ],
                            "minimum": 0,
                            "maximum": 65535
                        }
                    },
                    "type": "object"
                },
                "initialDelaySeconds": {
                    "type": "integer",
                    "minimum": 0
                },
                "periodSeconds": {
                    "type": "integer",
                    "minimum": 1
                },
                "timeoutSeconds": {
                    "type": "integer",
                    "minimum": 1
                },
                "successThreshold": {
                    "type": "integer",
                    "minimum": 1
                },
                "failureThreshold": {
                    "type": "integer",
                    "minimum": 1
                }
            },
            "type": "object"
        },
        "podSecurityContext": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "fsGroup": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 65534
                }
            },
            "type": "object"
        },
        "containerSecurityContext": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "readOnlyRootFilesystem": {
                    "type": "boolean"
                },
                "runAsNonRoot": {
                    "type": "boolean"
                },
                "runAsUser": {
                    "type": "integer",
                    "minimum": 0,
                    "maximum": 65534
                }
            },
            "type": "object"
        },
        "updateStrategy": {
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "Recreate",
                        "RollingUpdate"
                    ]
                }
            },
            "type": "object"
        },
        "service": {
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "ClusterIP",
                        "NodePort",
                        "LoadBalancer",
                        "ExternalName"
                    ]
                },
                "ports": {
                    "properties": {
                        "http": {
                            "type": [
                                "integer",
                                "string"
                            ],
                            "minimum": 0,
                            "maximum": 65535
                        }
                    },
                    "type": "object"
                },
                "nodePorts": {
                    "properties": {
                        "http": {
                            "type": [
                                "integer",
                                "string"
                            ],
                            "minimum": 0,
                            "maximum": 65535
                        }
                    },
                    "type": "object"
                },
                "clusterIP": {
                    "oneOf": [
                        {
                            "type": "string",
                            "format": "ipv4"
                        },
                        {
                            "type": "string",
                            "format": "ipv6"
                        },
                        {
                            "type": "string",
                            "minLength": 0,
                            "maxLength": 0
                        }
                    ]
                },
                "loadBalancerIP": {
                    "oneOf": [
                        {
                            "type": "string",
                            "format": "ipv4"
                        },
                        {
                            "type": "string",
                            "format": "ipv6"
                        },
                        {
                            "type": "string",
                            "minLength": 0,
                            "maxLength": 0
                        }
                    ]
                },
                "loadBalancerSourceRanges": {
                    "type": "array"
                },
                "externalTrafficPolicy": {
                    "type": "string",
                    "enum": [
                        "Cluster",
                        "Local"
                    ]
                },
                "annotations": {
                    "properties": {},
                    "type": "object"
                },
                "extraPorts": {
                    "type": "array"
                },
                "sessionAffinity": {
                    "type": "string",
                    "enum": [
                        "ClientIP",
                        "None"
                    ]
                },
                "sessionAffinityConfig": {
                    "properties": {},
                    "type": "object"
                }
            },
            "type": "object"
        },
        "serviceAccount": {
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "annotations": {
                    "properties": {},
                    "type": "object"
                },
                "automountServiceAccountToken": {
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "metrics": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "service": {
                    "properties": {
                        "type": {
                            "type": "string",
                            "enum": [
                                "ClusterIP",
                                "NodePort",
                                "LoadBalancer",
                                "ExternalName"
                            ]
                        },
                        "ports": {
                            "properties": {
                                "http": {
                                    "type": [
                                        "integer",
                                        "string"
                                    ],
                                    "minimum": 0,
                                    "maximum": 65535
                                }
                            },
                            "type": "object"
                        },
                        "nodePorts": {
                            "properties": {
                                "http": {
                                    "type": [
                                        "integer",
                                        "string"
                                    ],
                                    "minimum": 0,
                                    "maximum": 65535
                                }
                            },
                            "type": "object"
                        },
                        "clusterIP": {
                            "oneOf": [
                                {
                                    "type": "string",
                                    "format": "ipv4"
                                },
                                {
                                    "type": "string",
                                    "format": "ipv6"
                                },
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 0
                                }
                            ]
                        },
                        "loadBalancerIP": {
                            "oneOf": [
                                {
                                    "type": "string",
                                    "format": "ipv4"
                                },
                                {
                                    "type": "string",
                                    "format": "ipv6"
                                },
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 0
                                }
                            ]
                        },
                        "loadBalancerSourceRanges": {
                            "type": "array"
                        },
                        "externalTrafficPolicy": {
                            "type": "string",
                            "enum": [
                                "Cluster",
                                "Local"
                            ]
                        },
                        "annotations": {
                            "properties": {},
                            "type": "object"
                        },
                        "extraPorts": {
                            "type": "array"
                        },
                        "sessionAffinity": {
                            "type": "string",
                            "enum": [
                                "ClientIP",
                                "None"
                            ]
                        },
                        "sessionAffinityConfig": {
                            "properties": {},
                            "type": "object"
                        }
                    },
                    "type": "object"
                },
                "serviceMonitor": {
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "namespace": {
                            "type": "string"
                        },
                        "annotations": {
                            "properties": {},
                            "type": "object"
                        },
                        "labels": {
                            "properties": {
                                "monitoring": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        "jobLabel": {
                            "type": "string"
                        },
                        "honorLabels": {
                            "type": "boolean"
                        },
                        "port": {
                            "type": [
                                "integer",
                                "string"
                            ],
                            "minimum": 0,
                            "maximum": 65535
                        },
                        "path": {
                            "type": "string",
                            "format": "uri-reference"
                        },
                        "interval": {
                            "type": "string"
                        },
                        "scrapeTimeout": {
                            "type": "string"
                        },
                        "metricRelabelings": {
                            "type": "array"
                        },
                        "relabelings": {
                            "type": "array"
                        },
                        "selector": {
                            "properties": {},
                            "type": "object"
                        }
                    },
                    "type": "object"
                },
                "prometheusRule": {
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "namespace": {
                            "type": "string",
                            "default": ""
                        },
                        "annotations": {
                            "type": "object",
                            "default": {}
                        },
                        "labels": {
                            "type": "object",
                            "default": {}
                        },
                        "rules": {
                            "type": "array",
                            "default": []
                        }
                    },
                    "type": "object"
                }
            },
            "type": "object"
        },
        "ingress": {
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "pathType": {
                    "type": "string",
                    "enum": [
                        "ImplementationSpecific",
                        "Exact",
                        "Prefix"
                    ]
                },
                "ingressClassName": {
                    "type": "string"
                },
                "path": {
                    "type": "string",
                    "format": "uri-reference"
                },
                "serviceName": {
                    "type": "string"
                },
                "hosts": {
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "tls": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "secretName": {
                                "type": "string"
                            },
                            "hosts": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "extraPaths": {
                    "type": "array"
                },
                "extraRules": {
                    "type": "array"
                }
            },
            "type": "object"
        },
        "resourcesPreset": {
            "type": "string",
            "enum": [
                "none",
                "nano",
                "micro",
                "small",
                "medium",
                "large",
                "xlarge",
                "2xlarge"
            ],
            "description": "Set container resources according to one common preset (allowed values: none, nano, micro, small, medium, large, xlarge, 2xlarge)"
        },
        "resources": {
            "properties": {
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": [
                                "number",
                                "string"
                            ]
                        },
                        "memory": {
                            "type": [
                                "number",
                                "string"
                            ]
                        }
                    }
                },
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": [
                                "number",
                                "string"
                            ]
                        },
                        "memory": {
                            "type": [
                                "number",
                                "string"
                            ]
                        }
                    }
                }
            },
            "type": "object"
        },
        "env": {
            "type": "object"
        },
        "extraEnvVars": {
            "type": "array",
            "description": "Array containing extra env vars to configure the credential"
        },
        "persistence": {
            "type": "object",
            "description": "Section to configure persistence",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "description": "Enable persistence using Persistent Volume Claims"
                },
                "mountPath": {
                    "type": "string",
                    "description": "Path to mount the volume at"
                },
                "subPath": {
                    "type": "string",
                    "description": "The subdirectory of the volume to mount to"
                },
                "storageClass": {
                    "type": "string",
                    "description": "Storage class of backing PVC"
                },
                "annotations": {
                    "type": "object",
                    "description": "Persistent Volume Claim annotations"
                },
                "dataSource": {
                    "type": "object",
                    "description": "Custom PVC data source"
                },
                "accessModes": {
                    "type": "array",
                    "description": "Persistent Volume Access Modes",
                    "items": {
                        "type": "string"
                    }
                },
                "size": {
                    "type": "string",
                    "description": "Size of data volume",
                    "pattern": "^[1-9][0-9]*[m]?$|^[0-9]+(?:\\.[0-9]+)?(?:[KMGTP]i?)?$"
                },
                "existingClaim": {
                    "type": "string",
                    "description": "The name of an existing PVC to use for persistence"
                },
                "selector": {
                    "type": "object",
                    "description": "Selector to match an existing Persistent Volume for data PVC"
                }
            }
        },
        "temporary": {
            "type": "object",
            "description": "Section to configure emptyDir",
            "properties": {
                "mountPath": {
                    "type": "string",
                    "description": "Path to mount emptyDir volumes"
                },
                "subPath": {
                    "type": "string",
                    "description": "The subdirectory of the emptyDir volume to mount to"
                },
                "sizeLimit": {
                    "type": "string",
                    "description": "Set this to enable a size limit for emptyDir volumes",
                    "pattern": "^($|[1-9][0-9]*(\\.[0-9]+)?(E|P|T|G|M|k|Ei|Pi|Ti|Gi|Mi|Ki)+$)"
                },
                "medium": {
                    "enum": [
                        "",
                        "Memory"
                    ],
                    "description": "Provide a medium for emptyDir volumes"
                }
            }
        },
        "networkPolicy": {
            "type": "object",
            "description": "Network Policy configuration",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "description": "Specifies whether a NetworkPolicy should be created",
                    "default": true
                },
                "allowExternal": {
                    "type": "boolean",
                    "description": "When true, server will accept connections from any source",
                    "default": true
                },
                "allowExternalEgress": {
                    "type": "boolean",
                    "description": "Allow the pod to access any range of port and all destinations",
                    "default": true
                },
                "extraIngress": {
                    "type": "array",
                    "description": "Add extra ingress rules to the NetworkPolicy",
                    "default": []
                },
                "extraEgress": {
                    "type": "array",
                    "description": "Add extra egress rules to the NetworkPolicy",
                    "default": []
                },
                "ingressPodMatchLabels": {
                    "type": "object",
                    "description": "Labels to match to allow traffic from other pods",
                    "default": {}
                },
                "ingressNSMatchLabels": {
                    "type": "object",
                    "description": "Labels to match to allow traffic from other namespaces",
                    "default": {}
                },
                "ingressNSPodMatchLabels": {
                    "type": "object",
                    "description": "Pod labels to match to allow traffic from other namespaces",
                    "default": {}
                },
                "metrics": {
                    "type": "object",
                    "description": "Network Policy configuration for metrics endpoint",
                    "properties": {
                        "allowExternal": {
                            "type": "boolean",
                            "description": "When true, server will accept connections to the metrics port from any source",
                            "default": true
                        },
                        "ingressNSMatchLabels": {
                            "type": "object",
                            "description": "Labels to match to allow traffic from other namespaces to metrics endpoint",
                            "default": {}
                        },
                        "ingressNSPodMatchLabels": {
                            "type": "object",
                            "description": "Pod labels to match to allow traffic from other namespaces to metrics endpoint",
                            "default": {}
                        }
                    }
                }
            }
        }
    }
}